$sequence  death_02          "death_02" fps 30 activity ACT_GMOD_DEATH 2
$sequence  death_03          "death_03" fps 30 activity ACT_GMOD_DEATH 1
$sequence  death_04          "death_04" fps 34 activity ACT_GMOD_DEATH 1

